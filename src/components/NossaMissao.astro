---
import ContentBlock from '@/components/ContentBlock.vue';
import CarouselNossaMissao from '@/components/CarouselNossaMissao.vue';
import * as prismicH from '@prismicio/helpers';

const { data } = Astro.props;

const bgImg = `background-image: url(')`
---

<ContentBlock class="bg-black-600 bg-no-repeat bg-cover py-28 px-26 3xl:p-14 md:px-0 md:py-6" style={bgImg}>

    <section class="flex justify-between gap-10 lg:flex-col lg:gap-5">

        <img src={data.primary.img.url} alt={data.primary.img.alt} class="max-w-[420px] w-full object-cover object-right-top rounded-2xl mx-auto lg:aspect-video lg:object-top" />

        <div class="self-center">
            <div class="mb-20 lg:mb-0">

                <h1 class="alpha mb-4">
                    { data.primary.title }
                </h1>

                <div class="mb-10" set:html={prismicH.asHTML(data.primary.description)}></div>

                <a class:list={[ 'btn lg:w-full', data.primary.button_style ]} href={data.primary.button_link.url}>
                    { data.primary.button_label }
                </a>

            </div>

            <div class="lg:hidden">

                <h1 class="alpha mb-11">
                    { data.primary.carousel_title }
                </h1>

                <CarouselNossaMissao data={data.items}></CarouselNossaMissao>

            </div>

        </div>

    </section>
</ContentBlock>