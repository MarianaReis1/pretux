---
const { data } = Astro.props;
---


<section class="bg-center bg-cover bg-no-repeat max-w-[1440px] mx-auto px-26 py-48" style={'background-image: url(' + data.image + ')'}>

    <div class="max-w-[566px]">
        <h1 class="font-bold text-display text-9xl mb-2.5">{ data.title }</h1>
        <p class="font-light leading-tight mb-5 text-3xl" set:html="data.subtitle"></p>

        {data.button && 
            <a href={data.button.url} class="btn--primary">
                { data.button.label }
            </a>
        }
    </div>

</section>
