---
import ContentBlock from '@/components/ContentBlock.vue';

const { data } = Astro.props;
---


<section class="bg-top bg-cover bg-no-repeat px-26 py-44 md:px-3 md:pt-26 md:pb-10" style={'background-image: url(' + data.primary.background_image.url + ')'} >

    <ContentBlock>
        <div class="max-w-[566px] md:text-center md:mx-auto">
            <h1 class="font-bold text-10xl md:text-7xl mb-2.5">
                { data.primary.title }
            </h1>
            <p class="font-light leading-tight mb-5" set:html={data.primary.description[0].text}></p>
            {data.primary.button_link &&
                <a 
                href={data.primary.button_link.slug} 
                class:list={['btn', data.primary.button_style ]}>
                    { data.primary.button_label }
                </a>
            }
        </div>
    </ContentBlock>

</section>
