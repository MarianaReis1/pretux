---
import '@/styles/app.scss';
import Navigation from '@/components/nav/Navigation.astro';
import Footer from '@/components/footer/Footer.astro';

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&amp;display=swap" rel="stylesheet"/> 
    <title>Pretux | { title }</title>
  </head>

  <body class="font-body font-normal bg-black-600 min-h-screen h-full relative text-white text-md overflow-x-hidden lg:text-base">

    <Navigation></Navigation>

    <slot></slot>

    <Footer></Footer>

  </body>
</html>