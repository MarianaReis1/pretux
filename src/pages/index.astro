---

import { getSingleType, getSlice } from '@/modules/prismic.js';
import fallback from '@/modules/fallback-content.js';

//components
import BaseLayout from '@/layouts/BaseLayout.astro';
import Hero from '@/components/Hero.astro';
import OQueFazemos from '@/components/OQueFazemos.astro';
import Resultados from '@/components/Resultados.astro';
import NossaMissao from '@/components/NossaMissao.astro';

const data = await getSingleType('home') || fallback.home;

---

<BaseLayout title="Home">

	<Hero data={getSlice('hero',data.body)}></Hero>

	<OQueFazemos data={getSlice('o_que_fazemos',data.body)}></OQueFazemos>

	<Resultados data={getSlice('resultados',data.body)}></Resultados>

	<NossaMissao data={getSlice('missao',data.body)}></NossaMissao>

</BaseLayout>
