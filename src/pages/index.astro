---
//components
import BaseLayout from '@/layouts/BaseLayout.astro';
import Hero from '@/components/Hero.vue';

//images
import logo from '@img/logo-pretux.svg';
import resultados from '@img/resultados.png';
import maeEfilho from '@img/mae-e-filho.png';
import bgPattern from '@img/cta-bg.jpg';
const ctaBg = `background-image: url('${bgPattern}')`;

//data
const data = {
	hero: {
